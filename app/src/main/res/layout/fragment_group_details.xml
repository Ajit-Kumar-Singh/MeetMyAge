<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:padding="5sp">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="0px"
        android:layout_weight="14">

        <com.veinhorn.scrollgalleryview.ScrollGalleryView
            android:id="@+id/scroll_gallery_view"
            android:layout_width="400sp"
            android:layout_height="match_parent"
            android:background="#000"></com.veinhorn.scrollgalleryview.ScrollGalleryView>

        <android.support.design.widget.FloatingActionButton
            android:id="@+id/group_details_view_members"
            android:layout_width="50sp"
            android:layout_height="50sp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:layout_gravity="bottom|right"
            android:layout_marginBottom="51dp"
            android:layout_marginEnd="45dp"
            android:src="@drawable/ic_more_horiz_black_24dp"
            app:backgroundTint="#dedede" />
    </RelativeLayout>
<LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/myLayoutGroupMemberes"></LinearLayout>


    <TextView
        android:id="@+id/recommended_group_details_group_name"
        android:layout_width="400sp"
        android:layout_height="0px"
        android:layout_weight="2"
        android:gravity="center"
        android:textSize="20sp"
        android:textStyle="bold"></TextView>

    <TextView
        android:id="@+id/recommended_group_details_group_desc"
        android:layout_width="400sp"
        android:layout_height="0px"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="2sp"
        android:layout_weight="3"
        android:ellipsize="marquee"
        android:inputType="textMultiLine"
        android:padding="5sp"
        android:textSize="18sp"></TextView>

    <View
        android:layout_width="400sp"
        android:layout_height="2sp" />

    <LinearLayout
        android:layout_width="400sp"
        android:layout_height="0px"
        android:layout_weight="1"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="30sp"
            android:layout_height="match_parent"
            android:src="@drawable/ic_location_on_black_24dp" />

        <TextView
            android:id="@+id/recommended_group_details_distance"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textSize="18sp"></TextView>
    </LinearLayout>

</LinearLayout>
