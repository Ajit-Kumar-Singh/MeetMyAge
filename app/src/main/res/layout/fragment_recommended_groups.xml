<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    tools:context="views.pages.RecommendedGroupsFragment">
    <ProgressBar
        android:id="@+id/group_details_progress"
        style="?android:attr/progressBarStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="600sp"
            android:id="@+id/group_details_grid"
            android:verticalSpacing="5sp"
            android:horizontalSpacing="5sp"
            android:layout_weight="1"
            android:stretchMode="columnWidth"
            android:layout_gravity="center_horizontal"

            android:orientation="vertical"
            android:numColumns="1">
        </LinearLayout>
    <LinearLayout
        android:layout_width="350sp"
        android:layout_height="100sp">

        <android.support.design.widget.FloatingActionButton
            android:id="@+id/group_details_holder_viewMore"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="top|left"
            android:layout_margin="@dimen/fab_margin"
            android:src="@drawable/ic_more_horiz_black_24dp"
            app:backgroundTint="#dedede" />

        <View
            android:layout_width="200dp"
            android:layout_height="match_parent" />

        <android.support.design.widget.FloatingActionButton
            android:id="@+id/group_details_holder_join"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="top|right"
            android:layout_margin="@dimen/fab_margin"
            android:src="@drawable/ic_add_circle_black_24dp"
            app:backgroundTint="#dedede" />

    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="30sp" />
</LinearLayout>