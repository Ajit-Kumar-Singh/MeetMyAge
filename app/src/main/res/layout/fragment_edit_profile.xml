<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context="views.pages.EditProfileFragment">

    <LinearLayout
        android:id="@+id/top_sticky_label"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_alignParentTop="true"
        >
        <TextView
            android:layout_width="fill_parent"
            android:background="@color/mma_theme"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="EDIT PROFILE"
            android:textColor="#ffffff"
            style="@style/MMA_Heading"
            android:padding="10dp"/>
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:layout_below="@id/top_sticky_label"
        android:paddingBottom="10dp"
        android:fillViewport="true"
        android:background="#F5F5F5">

        <LinearLayout
            android:id="@+id/layoutEdit"
            android:layout_width="match_parent"
            android:layout_height="107dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView12"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="5dp"
                android:layout_marginTop="10dp"
                android:text="ADD UPTO FIVE FEATURED PHOTOS"
                style="@style/MMA_TextContent" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/gallaryPicFirst"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10sp"
                    android:layout_weight="1"
                    android:src="@drawable/com_facebook_profile_picture_blank_square" />

                <ImageView
                    android:id="@+id/gallaryPicSecond"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10sp"
                    android:layout_weight="1"
                    android:src="@drawable/com_facebook_profile_picture_blank_square" />

                <ImageView
                    android:id="@+id/gallaryPicThird"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10sp"
                    android:layout_weight="1"
                    android:src="@drawable/com_facebook_profile_picture_blank_square" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/gallaryPicFourth"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10sp"
                    android:layout_weight="1"
                    android:src="@drawable/com_facebook_profile_picture_blank_square" />

                <ImageView
                    android:id="@+id/gallaryPicFifth"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10sp"
                    android:layout_weight="1"
                    android:src="@drawable/com_facebook_profile_picture_blank_square" />

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" />
            </LinearLayout>

            <TextView
                android:id="@+id/textView11"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="NAME"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                style="@style/MMA_TextContent"/>

            <EditText
                android:id="@+id/editprofileName"
                style="@style/MMA_TextContent"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginTop="2dp"
                android:background="#ffffff"
                android:ems="10"
                android:paddingStart="10dp"
                android:inputType="textPersonName" />

            <TextView
                android:id="@+id/textView10"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginTop="20dp"
                style="@style/MMA_TextContent"
                android:text="ABOUT ME" />

            <EditText
                android:id="@+id/editprofileStory"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginTop="2dp"
                android:background="#ffffff"
                android:ems="10"
                style="@style/MMA_TextContent"
                android:paddingStart="10dp"
                android:inputType="textPersonName" />

            <TextView
                android:id="@+id/textView9"
                style="@style/MMA_TextContent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="5dp"
                android:layout_marginTop="10dp"
                android:textSize="20sp"
                android:text="WORK" />

            <EditText
                android:id="@+id/editprofileWork"
                style="@style/MMA_TextContent"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:paddingStart="10dp"
                android:layout_marginTop="2dp"
                android:background="#ffffff"
                android:ems="10"
                android:inputType="textPersonName" />

            <Button
                android:id="@+id/saveProfile"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginTop="10dp"
                android:background="#ffffff"
                style="@style/MMA_TextTitle"
                android:text="Save" />
            <View
                android:layout_width = "match_parent"
                android:layout_height = "50dp" />
        </LinearLayout>

    </ScrollView>
</RelativeLayout>
