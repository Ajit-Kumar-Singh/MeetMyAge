<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:id="@+id/group_details_holder_rel_layout"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="5sp"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@drawable/rectangle"
    android:padding="5sp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:layout_height="200sp"
        android:id="@+id/group_details_holder_image"
        android:layout_width="350sp"
        android:src="@drawable/man"
        android:layout_gravity="top|center_horizontal"
        android:background="@color/com_facebook_blue"
        android:layout_centerHorizontal="true">
    </ImageView>

    <TextView
        android:text="TextView"
        android:layout_height="40sp"
        android:id="@+id/group_details_holder_image_group_name"
        android:layout_width="350sp"
        android:layout_below="@+id/group_details_holder_image"
        android:layout_marginTop="2sp"
        android:layout_centerHorizontal="true"
        android:layout_gravity="top|center_horizontal"
        android:textSize="25sp"
        android:textStyle="bold"
        android:ellipsize="marquee"></TextView>

    <TextView
        android:text="TextView"
        android:layout_height="100sp"
        android:id="@+id/group_details_holder_image_group_desc"
        android:layout_width="350sp"
        android:layout_below="@+id/group_details_holder_image_group_name"
        android:layout_marginTop="2sp"
        android:layout_centerHorizontal="true"
        android:textSize="18sp"
        android:ellipsize="marquee"></TextView>

    <LinearLayout
        android:layout_width="350sp"
        android:layout_height="80sp"
        android:orientation="horizontal">

        <android.support.design.widget.FloatingActionButton
            android:id="@+id/group_details_holder_viewMore"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="top|left"
            android:layout_margin="@dimen/fab_margin"
            android:src="@drawable/ic_more_horiz_black_24dp"
            app:backgroundTint="#dedede" />

        <View
            android:layout_width="200dp"
            android:layout_height="match_parent" />

        <android.support.design.widget.FloatingActionButton
            android:id="@+id/group_details_holder_join"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="top|right"
            android:layout_margin="@dimen/fab_margin"
            android:src="@drawable/ic_add_circle_black_24dp"
            app:backgroundTint="#dedede" />
    </LinearLayout>

</LinearLayout>